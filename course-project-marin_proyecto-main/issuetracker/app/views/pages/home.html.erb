<div id="central"><a href=/tickets/new  class="btn btn-info btn-lg active margin-right:.5em" role="button" aria-pressed="true">Create new ticket</a></div>
<div id="column-right">
<h2>Tickets Open</h2>
    <table class="table">
  <thead class="bg-info">
      <th>ID</th>
      <th>User</th>
      <th>Executive</th>
      <th>Title</th>
      <th>State</th>
      <th>Creation Date</th>
      <th>View</th>
      </thead>
    <tbody>
    <% Ticket.where(state:"open").sort{|a,b| b.creation_date <=> a.creation_date}.each do |ticket| %>
      <tr>
          <td><%=ticket.id%></td>
          <td><%=ticket.executive.first_name%><%=" "%><%=ticket.executive.last_name%></td>
          <td><%=ticket.user.first_name%><%=" "%><%=ticket.user.last_name%></td>
          <td><%=ticket.title%></td>
          <td><%=ticket.state%></td>
          <td><%=ticket.creation_date%></td>
          <td><button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "View", ticket %></button></td>
        <tr>
    </tbody>
    <%end%> 
</div>

