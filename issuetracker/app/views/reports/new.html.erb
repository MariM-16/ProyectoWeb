<h1>New report</h1>
<%= form_with(model: @report) do |form| %>
  <% if @report.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@report.errors.count, "error") %> prohibited this report from being saved:</h2>

      <ul>
        <% @report.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <%else%>
  
    <div class="mb-3">
      <h5><strong> Report</strong></h5>
      <%= form.select :report, [["Report Tickets by Date", "Report Tickets by Date"], ["Expire Ticket Report", "Expire Ticket Report"], ["Executive Performance Report", "Executive Performance Report"]], selected: :report %>
    </div>

    <hr style="color: #0056b2; " />
    <div class="mb-3">
      <h4>Report Tickets by Date</h4>
      <div class="input-group input-daterange">
          <h5><strong> Start date </strong></h5>
          <div id="colp"><%= form.text_field :init_date, class: "form-control", placeholder:"AAAA-MM-DD HH:MM"%></div>
          <h5><strong> End date </strong></h5>
          <div id="colp"><%= form.text_field :finish_date, class: "form-control",placeholder:"AAAA-MM-DD HH:MM"%></div>
        </div>
    </div>

    <hr style="color: #0056b2;" />
    <div class="mb-3">
      <h4>Expire Ticket Report</h4>
      <div class="input-group input-daterange">
          <h5><strong> Date today </strong></h5>
          <%=form.hidden_field :act_date, value: Time.now %>
        </div>
    </div>
    <hr style="color: #0056b2;" />

    <div class="mb-3">
      <h4>Executive Performance Report</h4>
      <div class="input-group input-daterange">
          <h5><strong> Executive  </strong></h5>
          <div id="colp"> <select class="form-control">
          <option><%="0 All Executive"%></option>
          <% @executive.each do |user| %>
          <%= render user %>
          <option><%=user.id%><%=" "%><%=user.first_name%><%=" "%><%=user.last_name%></option>
          <%end%>
          </select>
        </div></div>
      </div>
    </div>
    </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
<% end %>
<div>
  <%= link_to "Back to reports", reports_path %>
</div>
